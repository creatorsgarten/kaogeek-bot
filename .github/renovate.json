{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "autoApprove": true,
  "automerge": true,
  "prConcurrentLimit": 2,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": true
    },
    {
      "packageNames": ["node"],
      "enabled": false
    },
    {
      "packagePatterns": ["*"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "dependencies (non-major)"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
